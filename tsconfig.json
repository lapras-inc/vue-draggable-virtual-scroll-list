{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2019",
      "esnext.array",
      "dom",
      "scripthost"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["./src", "./types"],
  "exclude": [
    "node_modules",
    "rollup",
    "dist"
  ]
}
